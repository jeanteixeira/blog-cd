  <% @posts.each do |post| %>
  <div class="jumbotron">
    <div class="card">
      <%= image_tag(post.image_post, size: "500x150", class: "card-img-top") %>
      <div class="card-block">
        <h4 class="card-title"><%= post.title %></h4>
        <h4 class="card-subtitle"><%= post.subtitle %></h4>
        <p class="card-text"><%= post.body_text %></p>
        <%= link_to "ver postagem", post_detail_path(post), class: "btn btn-info btn-sm"%>
      </div>
    </div>
  </div>
  <% end %>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
